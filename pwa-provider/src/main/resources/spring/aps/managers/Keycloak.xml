<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="keycloakConfiguration"
          class="org.entando.entando.plugins.keycloak.aps.KeycloakConfiguration">
        <property name="authUrl">
            <value>${keycloak.authUrl}</value>
        </property>
        <property name="realm">
            <value>${keycloak.realm}</value>
        </property>
        <property name="clientId">
            <value>${keycloak.clientId}</value>
        </property>
        <property name="clientSecret">
            <value>${keycloak.clientSecret}</value>
        </property>
    </bean>

    <bean id="keycloakService" class="org.entando.entando.aps.system.services.user.KeycloakService">
        <constructor-arg index="0" ref="keycloakConfiguration"/>
    </bean>

</beans>
